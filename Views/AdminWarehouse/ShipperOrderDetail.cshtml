@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_AdminWarehouse.cshtml";
    var order = ViewBag.Order;
}
<div class="page-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h2>Chi tiết đơn hàng: @order.Code</h2>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><b>Khách hàng:</b> @order.CustomerName</p>
                        <p><b>Địa chỉ:</b> @order.Address</p>
                        <p><b>SĐT:</b> @order.Phone</p>
                        <p><b>Trạng thái hiện tại:</b> @order.Status</p>
                    </div>
                    <div class="col-md-6">
                        <b>Sản phẩm:</b>
                        <ul>
                            @foreach(var item in order.Items)
                            {
                                <li>@item.ProductName x @item.Quantity</li>
                            }
                        </ul>
                    </div>
                </div>
                <h4>Lịch sử trạng thái</h4>
                <ul>
                    @foreach(var log in order.StatusLogs)
                    {
                        <li>@log.Time.ToString("dd/MM/yyyy HH:mm") - <b>@log.Status</b> - @log.Note</li>
                    }
                </ul>
                <hr />
                <h4>Cập nhật trạng thái đơn hàng</h4>
                <form method="post" action="/adminwarehouse/shipper-update-status/@order.Id">
                    <div class="row g-2">
                        <div class="col-md-4">
                            <select name="status" class="form-control" required>
                                <option value="">-- Chọn trạng thái --</option>
                                <option>Đang lấy hàng</option>
                                <option>Đã lấy hàng</option>
                                <option>Đang giao hàng</option>
                                <option>Giao thành công</option>
                                <option>Giao thất bại</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="note" class="form-control" placeholder="Ghi chú (nếu có)">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-success w-100">Cập nhật</button>
                        </div>
                    </div>
                </form>
                @if(TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
                }
            </div>
        </div>
    </div>
</div> 