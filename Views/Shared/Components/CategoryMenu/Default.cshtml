@model List<Village_Manager.Models.ProductCategory>

<ul class="category-list">
    @foreach (var category in Model)
    {
        <li class="onhover-category-list">
            <a href="@Url.Action("ProductsByCategory", "Product", new { categoryId = category.Id })" class="category-name">
                <h6>@category.Name</h6>
                <i class="fa-solid fa-angle-right"></i>
            </a>
        </li>
    }
</ul>